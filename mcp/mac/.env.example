# Mac MCP Server Configuration
# Copy this file to .env and modify the values as needed

# Device Configuration
MAC_DEVICE_NAME="Local Mac"
ENABLE_ACCESSIBILITY=false
SAFE_MODE=false
LOG_LEVEL=INFO

# Automation Settings
CLICK_DELAY=0.1
TYPE_DELAY=0.01
SCREENSHOT_QUALITY=85
MAX_SCREENSHOT_SIZE=1920x1080

# Security Settings
ALLOW_SHELL_COMMANDS=true
ALLOW_FILE_OPERATIONS=true
ALLOW_SYSTEM_CHANGES=false
RESTRICTED_COMMANDS="rm,sudo,shutdown,reboot"

# Performance Settings
ELEMENT_DISCOVERY_TIMEOUT=10.0
APPLESCRIPT_TIMEOUT=30.0
SCREENSHOT_SCALE=1.0

# Application Control
DEFAULT_APP_LAUNCH_TIMEOUT=10.0
WINDOW_OPERATION_TIMEOUT=5.0

# File Operations
DEFAULT_FILE_BACKUP=false
SAFE_DELETE_TO_TRASH=true
MAX_FILE_SIZE_MB=100

# System Monitoring
ENABLE_PROCESS_MONITORING=true
ENABLE_NETWORK_MONITORING=true
ENABLE_SYSTEM_STATS=true

# Accessibility Features
VOICE_OVER_COMPATIBLE=false
HIGH_CONTRAST_MODE=false
ZOOM_ASSISTANCE=false

# Advanced Options
DEBUG_MODE=false
VERBOSE_LOGGING=false
PERFORMANCE_METRICS=false